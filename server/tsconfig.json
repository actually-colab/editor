{
  "display": "Node 14",
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2020",
    "sourceMap": true,

    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "baseUrl": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src", "webpack.config.ts"]
}
