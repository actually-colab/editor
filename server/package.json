{
  "name": "@actually-colab/editor-server",
  "version": "0.1.0",
  "description": "WebSocket server for a synced editor component",
  "license": "SEE LICENSE IN ./LICENSE",
  "keywords": [
    "typescript",
    "lambda",
    "aws",
    "serverless",
    "rest"
  ],
  "scripts": {
    "offline": "NODE_ENV='development' yarn sls offline start",
    "start": "yarn start:pgsql && yarn offline",
    "start:test": "yarn start:pgsql && yarn sls offline start --stage test",
    "start:pgsql": "yarn pgsql:up && sleep 3 && yarn pgsql:init",
    "pgsql:init": "psql -h localhost -U admin -d AC-dev -f ./pgsql-local/init-db.sql -w",
    "pgsql:up": "docker-compose -p AC-pgsql-local -f ./pgsql-local/docker-compose.yml up -d --build",
    "pgsql:down": "docker-compose -p AC-pgsql-local -f ./pgsql-local/docker-compose.yml down",
    "deploy": "NODE_OPTIONS=\"--max-old-space-size=4096\" yarn serverless deploy --aws-profile ac-bailey",
    "deploy:domain": "yarn serverless create_domain --aws-profile ac-bailey",
    "deploy:prod": "yarn deploy -s production",
    "deploy:prod:ci": "NODE_OPTIONS=\"--max-old-space-size=4096\" yarn serverless deploy --stage production",
    "deploy:staging": "yarn deploy -s staging",
    "deploy:staging:ci": "NODE_OPTIONS=\"--max-old-space-size=4096\" yarn serverless deploy --stage staging",
    "deploy:domain:prod": "yarn deploy:domain -s production",
    "reinstall:types": "yarn remove:types; yarn add:types",
    "remove:types": "yarn remove @actually-colab/editor-types",
    "add:types": "yarn add --dev file:../types"
  },
  "dependencies": {
    "@shallot/aws": "^1.0.6",
    "@shallot/aws-websocket-wrapper": "^1.0.9",
    "@shallot/http-error-handler": "^1.1.0",
    "@shallot/rest-wrapper": "^1.2.0",
    "aws-sdk": "^2.842.0",
    "google-auth-library": "^7.0.2",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.17",
    "nodemailer": "^6.5.0",
    "pg": "^8.5.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@actually-colab/editor-types": "file:../types",
    "@types/aws-lambda": "^8.10.67",
    "@types/aws-sdk": "^2.7.0",
    "@types/http-errors": "^1.8.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/knex": "^0.16.1",
    "@types/node": "^14.14.35",
    "@types/uuid": "^8.3.0",
    "@types/webpack-node-externals": "^2.5.0",
    "raw-loader": "^4.0.2",
    "serverless": "^2.40.0",
    "serverless-domain-manager": "^5.1.0",
    "serverless-offline": "^7.0.0",
    "serverless-stage-manager": "^1.0.5",
    "serverless-webpack": "^5.4.2",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.12",
    "typescript": "^4.2.3",
    "webpack": "^5.11.0",
    "webpack-node-externals": "^2.5.2",
    "wscat": "^4.0.1",
    "yarn": "^1.22.10"
  }
}
